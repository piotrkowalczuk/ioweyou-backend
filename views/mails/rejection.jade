!!! transitional
html(xmlns='http://www.w3.org/1999/xhtml')
head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        title #{title}
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
    body(style='margin: 0; padding: 0;')
        table(border='0', cellpadding='0', cellspacing='0', width='100%')
            tr
                td(style='padding: 10px 0 30px 0;')
                    table(align='center', border='0', cellpadding='0', cellspacing='0', width='600', style='border: 1px solid #cccccc; border-collapse: collapse;')
                        tr
                            td(bgcolor='#ffffff', style='padding: 40px 30px 40px 30px;')
                                table(border='0', cellpadding='0', cellspacing='0', width='100%')
                                    tr
                                        td(colspan='2', style='color: #153643; font-family: Arial, sans-serif; font-size: 24px;')
                                            b  Entry has been rejected.
                                    tr
                                        td(style='vertical-align: top; padding: 23px 10px 30px 0; color: #153643; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;')
                                            img(src='http://graph.facebook.com/#{debtor.username}/picture', alt='')
                                        td(style='padding: 20px 0 30px 0; color: #153643; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;')
                                            b #{entry.name}
                                            br
                                            | #{entry.description}
                                    tr
                                        td(colspan='2', style='color: #ff3366; font-family: Arial, sans-serif; font-size: 24px; text-align:center;')
                                            b  -#{entry.value}zł
                        tr
                            td(bgcolor='#006666', style='padding: 30px 30px 30px 30px;')
                                table(border='0', cellpadding='0', cellspacing='0', width='100%')
                                    tr
                                        td(style='color: #ffffff; font-family: Arial, sans-serif; font-size: 14px;', width='75%')
                                            | ® IOweYOU.pl 2013
                                            br
